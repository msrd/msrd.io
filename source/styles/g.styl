/*!! file:g.styl        */

@import 'modules/rhythm'

// These three constants come straight from gridlover.net
// Ratios taken from http://lamb.cc/typograph/ (Specifically the 3:5 Fibonacci)
body-font-size = 1.0rem
body-line-height = 1.5
scale-factor = 1.6250

$whiteish = hsl(0, 50, 99)
$blackish = hsl(0, 0, 7)
$logocolor = hsl(202, 100%, 38%)

$redish   = spin($logocolor, 180%)
$headercolor = $logocolor
$linkcolor = $logocolor

$measure = 42rem

*
  box-sizing: border-box

html
  background url(/images/debut_light.png) 

body
  rhythm(0)
  font-family   sans-serif
  width         $measure
  margin        0 auto
  color         $blackish
  //  background url(/images/24.svg) center top repeat

h1
  rhythm(4, 1, 2)
  color $headercolor
  margin-left  -0.3 rem
  letter-spacing -2px
  text-rendering optimizelegibility

  span
    color lightGray

h2
  rhythm(2, 2, 1)
  color $headercolor
  // See http://âž¡.ws/border-top
  background url('/images/1x1.svg') top left repeat-x

h3
  rhythm(1, 1, 0)
  color $headercolor

p.slug
  color $redish
  font-weight bold
  margin-top -3.0 rem

span.invert
  color $whiteish
  background-color: $logocolor
  padding: 4px

.medium
  display none

// Fancy hyperlinks
a:visited, a:link
  color darken($linkcolor, 20%)
  text-decoration none
  border-bottom 1px solid lighten($linkcolor, 60%)

a:active, a:hover
  border-bottom 1px solid darken($linkcolor, 20%)
  background lighten($linkcolor, 70%)

