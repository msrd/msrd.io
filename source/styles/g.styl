/*!! file:g.styl        */

@import 'modules/rhythm'

// These three constants come straight from gridlover.net
// Ratios taken originally from http://lamb.cc/typograph/ (Specifically the 3:5 Fibonacci)
// Now adapted from http://pumpula.net/p/gridlover/beta/#font:16/line:1.500/scale:1.625/measure:960/grid:hide
body-font-size = 1.00rem
body-line-height = 1.50
scale-factor = 1.6250
vertical-rhythm = 24px      // default browser type (16px usually) * body-font-size * body-line-height
show-grid = true

$whiteish = hsl(0, 50, 99)
$blackish = hsl(0, 0, 7)
$logocolor = hsl(202, 100%, 38%)

$redish   = spin($logocolor, 180%)
$headercolor = $logocolor
$linkcolor = $logocolor

$measure = 42rem

.rdHero 
  color #5c6a73
  text-align center
  font-size 3rem
  line-height 1.2em
  font-weight 300

i
  font-size 7.472135999999999rem
  line-height 1.5em

.icon-headphones
  color #0acfac

.icon-comments
  color #008edc

.icon-heart
  color #d55340
  
//*
// box-sizing: border-box

html
  background url(/images/debut_light.png) 

body
  rhythm(0)
  font-family   sans-serif
  //width         $measure
  margin        0 auto
  color         $blackish
  
.measure
    measure()

.vertical-grid
    vertical-grid(vertical-rhythm)

h1
  rhythm(4, 1, 2)
  color $headercolor
  //margin-left  -0.3 rem
  letter-spacing -2px
  text-rendering optimizelegibility

  span
    color lightGray

h2
  rhythm(2, 2, 1)
  color $headercolor
  // See http://âž¡.ws/border-top
  //background url('/images/1x1.svg') top left repeat-x

h3
  rhythm(1, 1, 0)
  color $headercolor

p.slug
  color $redish
  font-weight bold
  rhythm(0, -2, 0)

span.invert
  color $whiteish
  background-color: $logocolor
  padding: 4px

.medium
  display none

// Fancy hyperlinks
a:visited, a:link
  color darken($linkcolor, 20%)
  text-decoration none
  //border-bottom 1px solid lighten($linkcolor, 60%)

a:active, a:hover
  //border-bottom 1px solid darken($linkcolor, 20%)
  //background lighten($linkcolor, 70%)

// Scott's "house style" typography decisions:
// Hanging puncation, squares as bullets, small roman for numbering
// Proper abbreviations and figure captions

p, ul, ol
  rhythm(0, 0, 1)
 
abbr
  font-size 0.9em
  text-transform uppercase
  letter-spacing 0.1em

ul
  padding 0
  list-style: square

ol
  padding 0
  list-style: lower-roman

figure
  a:active, a:hover, a:visited, a:link
    border-bottom 0px

figcaption
  color darkGray
  font-variant small-caps
  font-size 0.9em
  margin-top    0rem
  margin-bottom 1.5rem



