@import 'buttons/buttons.styl'

$whiteish = hsl(0, 0, 99)
$blackish = hsl(0, 0, 7)
$logocolor = hsl(202, 100%, 38%)

$redish   = spin($logocolor, 180%)
$headercolor = $logocolor
$linkcolor = $logocolor

// Ratios taken from http://lamb.cc/typograph/
// Specifically the 3:5 Fibonacci

$phi = 0.6250       // 5/8ths
$0 = 1.0            // maps to 1.0 rem units
$1 = $0 + $phi      // 1.6250
$2 = $1 + $0        // 2.6250
$3 = $2 + $1        // 4.2500
$4 = $3 + $2        // 6.8750

*
  box-sizing: border-box

html
  background url(/images/debut_light.png) 

body
  font          1.0rem/1.5 sans-serif
  width         42em
  margin        0 auto
  color         $blackish
  // background url(/images/24.svg) center top repeat

h1
  color $headercolor
  font-size     $4 rem
  line-height   7.5 rem
  margin-top    1.5 rem
  margin-bottom 3.0 rem
  margin-left  -0.3 rem
  letter-spacing -2px
  text-rendering optimizelegibility

  span
    color lightGray

p.slug
  color $redish
  font-weight bold
  margin-top -3.0 rem

span.invert
  color $whiteish
  background-color: $logocolor
  padding: 4px

a:visited, a:link
  color darken($linkcolor, 20%)
  text-decoration none
  border-bottom 1px solid lighten($linkcolor, 60%)

a:active, a:hover
  border-bottom 1px solid darken($linkcolor, 20%)
  background lighten($linkcolor, 90%)

figure
  a:active, a:hover, a:visited, a:link
    border-bottom 0px

figcaption
  color darkGray
  font-variant small-caps
  margin-top    0rem
  margin-bottom 1.5rem

h2
  color $headercolor
  font-size     $2 rem
  line-height   3.0 rem
  margin-top    3.0 rem
  margin-bottom 1.5 rem
  // See http://âž¡.ws/border-top
  background url('/images/1x1.svg') top left repeat-x

h3
  color $headercolor
  font-size     $1 rem
  line-height   3.0 rem
  margin-top    1.5 rem
  margin-bottom 0 rem

p, ul, ol
  margin-top    0rem
  margin-bottom 1.5rem

